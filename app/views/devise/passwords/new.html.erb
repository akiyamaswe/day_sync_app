<div class="min-h-screen">
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="max-w-xl w-full mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold"><%= t('.forgot_your_password') %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="bg-white rounded-2xl shadow-sm p-6">
        <div class="field mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors" %>
        </div>

        <div class="flex flex-col md:flex-row gap-4 justify-end">
          <%= f.submit t('.send_me_reset_password_instructions'),
              class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-all duration-200 shadow-sm hover:-translate-y-0.5 hover:shadow-md" %>
        </div>
      </div>
    <% end %>

    <div class="devise-links mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="min-h-screen">
  <div class="max-w-xl w-full mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-3xl font-bold"><%= t('.sign_in') %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="bg-white rounded-2xl shadow-sm p-6">
        <div class="field mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field remember-me mb-6">
            <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-gray-600" %>
          </div>
        <% end %>

        <div class="flex flex-col md:flex-row gap-4 justify-end">
          <%= f.submit t('.sign_in'), class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-all duration-200 shadow-sm hover:-translate-y-0.5 hover:shadow-md" %>
        </div>
      </div>
    <% end %>

    <div class="devise-links flex flex-col md:flex-row gap-4 justify-end">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

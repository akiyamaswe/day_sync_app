<%= form_with(model: report) do |form| %>
  <div class="bg-white rounded-2xl shadow-sm p-6" data-controller="markdown-preview">
    <div class="field mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors" %>
    </div>

    <div class="field mb-4">
      <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex space-x-4">
        <div class="w-1/2">
          <%= form.text_area :content,
              rows: 30,
              class: "w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors",
              data: { markdown_preview_target: "input" } %>
        </div>
        <div class="w-1/2">
          <div class="prose border rounded-md p-4 h-[720px] overflow-y-auto" data-markdown-preview-target="preview">
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col md:flex-row gap-4 justify-end">
      <%= form.submit class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-all duration-200 shadow-sm hover:-translate-y-0.5 hover:shadow-md" %>
    </div>
  </div>
<% end %>

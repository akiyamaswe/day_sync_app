<div class="max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold mb-8">
    <%= t('views.common.title_show', name: Report.model_name.human) %>
  </h1>

  <div class="bg-white rounded-2xl shadow-sm p-6 mb-8">
    <%= render @report %>
  </div>

  <div class="bg-white rounded-2xl shadow-sm p-6 mb-8">
    <%= render 'shared/comments', commentable: @report %>
  </div>

  <div class="bg-white rounded-2xl shadow-sm p-6 mb-8">
    <%= render 'mentions', report: @report %>
  </div>

  <nav class="flex flex-col md:flex-row gap-4 justify-end mt-8">
    <% if @report.editable?(current_user) %>
      <%= link_to t('views.common.edit', name: Report.model_name.human.downcase),
          edit_report_path(@report),
          class: "w-full md:w-auto px-6 py-2 bg-blue-600 text-white text-center rounded-md hover:bg-blue-700 transition-all duration-200 transform hover:-translate-y-0.5 hover:shadow-md shadow-sm" %>

      <%= button_to t('views.common.destroy', name: Report.model_name.human.downcase),
          @report,
          method: :delete,
          data: { turbo_confirm: t('views.common.delete_confirm') },
          class: "w-full md:w-auto px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-red-600 transition-all duration-200 shadow-sm hover:-translate-y-0.5 hover:shadow-md" %>
    <% end %>

    <%= link_to t('views.common.back', name: i18n_pluralize(Report.model_name.human.downcase)),
        reports_path,
        class: "w-full md:w-auto px-6 py-2 bg-gray-500 text-white text-center rounded-md hover:bg-gray-600 transition-all duration-200 transform hover:-translate-y-0.5 hover:shadow-md shadow-sm" %>
  </nav>
</div>

<div id="<%= dom_id user %>">
  <p>
    <strong><%= User.human_attribute_name(:email) %>:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:name) %>:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:phone_number) %>:</strong>
    <%= user.phone_number %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:postal_code) %>:</strong>
    <%= user.postal_code %>
  </p>

  <p>
    <strong><%= User.human_attribute_name(:address) %>:</strong>
    <%= user.address %>
  </p>

  <p>
  <strong class="content-label"><%= User.human_attribute_name(:self_introduction) %>:</strong>
    <%= format_content(user.self_introduction) %>
  </p>
</div>
